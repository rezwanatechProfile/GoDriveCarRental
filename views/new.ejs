  <!-- //header -->
  <header id="new-page-header">
    <div class="container">
      <div class="row">
        <div class="col-md-10 m-auto text-center">
          <h1>Start building a small car sharing business with GoDrive</h1>
        </div>
      </div>
    </div>
  </header>


  <section id="" class="py-3">
    <div class="container container-new">
      <div class="row">
        <div class="col-md-12">
          <div class="card p-4">
            <div class="card-body">
              <h3 class="text-center text-dark">Build a business thatâ€™s...Scalable, Accessible, Flexible
              </h3>
              <hr>
              <form action="/cars/host" method="POST" enctype="multipart/form-data">
                <div class="row text-dark">
                  <div class="col-md-6 mt-2">
                    <div class="form-group">
                      <label>Car</label>
                      <input type="text" name="carName" class="form-control" placeholder="Car Name" required>
                    </div>
                  </div>
                  <div class="col-md-6 mt-2">
                    <div class="form-group">
                      <label>Title</label>
                      <input type="text" name="title" class="form-control" placeholder="ex: Toyota Camry 2022" required>
                    </div>
                  </div>
                  <div class="col-md-6 mt-2">
                    <div class="form-group">
                      <label>Owner</label>
                      <input type="text" name="ownerName" class="form-control" placeholder="Owner name">
                    </div>
                  </div>
                  <div class="col-md-3 mt-2">
                    <div class="form-group">
                      <label>Rating</label>
                      <input type="number" step=any name="rating" class="form-control" placeholder="rate out of 5">
                    </div>
                  </div>


                  <div class="col-md-3 mt-2">
                    <div class="form-group">
                      <label>Price Per Day</label>
                      <input type="number" name="pricePerDay" class="form-control" placeholder="$" required>
                    </div>
                  </div>

                  <div class="col-md-12 mt-2">
                    <div class="form-group">
                      <label>Image</label>
                      <input type="file" name="img" accept="uploads/*" class="form-control" placeholder="" required>
                    </div>
                  </div>

                  <div class="col-md-12 mt-2">
                    <div class="form-group">
                      <label>Description</label>
                      <!-- <input type="text" name ="description" class="form-control" placeholder=""> -->
                      <textarea type="text" class="form-control" name="description"></textarea>
                    </div>
                  </div>
                  <div class="col-md-3 mt-2">
                    <div class="form-group">
                      <label>Location</label>
                      <input list="listItem" type="text" name="location" class="form-control" placeholder="Select one">
                      <datalist id="listItem">
                        <option value="Alexandria">
                        <option value="Ashburn">
                        <option value="Fairfax">
                        <option value="Manassas">
                        <option value="Chantily">
                        <option value="Falls Church">
                        <option value="Winchester">
                        <option value="Fredericksburg">
                        <option value="Springfield">
                        <option value="Vienna">
                        <option value="Arlington">
                        <option value="McLean">
                        <option value="Woodbridge">
                        <option value="Sterling">
                        <option value="Lorton">
                      </datalist>
                    </div>
                  </div>
                  <div class="col-md-3 mt-2">
                    <div class="form-check">
                      <label class="form-check-label" for="flexCheckDefault">Is Registered?</label>
                      <input type="checkbox" class="form-check-input" name="tag">
                    </div>
                  </div>

                  <div class="col-md-3 mt-2">
                    <div class="form-check">
                      <label class="form-check-label" for="flexCheckDefault">Is Available?</label>
                      <input type="checkbox" class="form-check-input" name="isAvailable">
                    </div>
                  </div>
                  <div class="col-md-3 mt-2">
                    <div class="form-group">
                      <label>Available From</label>
                      <input type="date" class="form-control" name="dateFrom">
                    </div>
                  </div>


                  <div class="col-md-12 mt-2">
                    <div class="form-group">
                      <label>Features</label>
                      <select class="form-control" name="features[]" multiple>
                        <option value="Automatic Transmission">Automatic Transmission</option>
                        <option value="GPS">GPS</option>
                        <option value="USB Input">USB Input</option>
                        <option value="USB Charger">USB Charger</option>
                        <option value="Must be 21+ to book">Must be 21+ to book</option>
                        <option value="Keyless entry">Keyless entry</option>
                        <option value="Convertible">Convertible</option>
                        <option value="Bluetooth">Bluetooth</option>
                        <option value="Heated seats">Heated seats</option>
                        <option value="Backup camera">Backup camera</option>
                        <option value="Digital dashboard">Digital dashboard</option>
                        <option value="Apple CarPlay">Apple CarPlay</option>
                        <option value="Android Auto">Android Auto</option>
                        <option value="Ventilated seats">Ventilated seats</option>
                      </select>
                      <!-- <textarea type="text" class="form-control" name="features"></textarea> -->
                    </div>
                  </div>

                  <div class="col-md-12 mt-2">
                    <div class="form-group">
                      <label>Guidlines</label>
                      <textarea type="text" class="form-control" name="guidelines"></textarea>
                    </div>
                  </div>

                  <div class="col-md-12 mt-3">
                    <div class="form-group text-center">
                      <input type="submit" value="SUBMIT" class="btn btn-outline-danger btn-block">
                    </div>
                  </div>
                  
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
  </section>
  
