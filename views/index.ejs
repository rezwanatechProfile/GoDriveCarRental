<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include ('./partials/head.ejs') %>
		<title>GoDrive | Car Sharing Marketplace</title>
	</head>
	<body>
	
		<nav class="navbar navbar-expand-lg mb-2 navbar-dark bg-dark">
			<div class="container">
				<a class="navbar-brand" href="/cars">GoDrive</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				  </button>

			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav">
          <li class="nav-item">
						<a class="nav-link text-primary active" href="/cars">HOME</a></li>
					<li class="nav-item">
						<a class="nav-link text-light" href="/cars/new">BECOME A HOST</a></li>
					<li class="nav-item">
						<a class="nav-link text-light" href="/cars/host/">YOUR LISTING</a></li>  
            <li class="nav-item">
              <a class="nav-link text-light" href="/users/signout">SIGN OUT</a>
            </li>
				</ul>
			</div>
  </nav>  

<!-- //header -->
		<header id="page-header">
			<div class="container">
			  <div class="row">
				<div class="col-md-10 m-auto text-center">
					<h1 class="text-center mt-3">Find the perfect car to conquer great outdoors</h1>
					<h2 class="text-center mb-3">Rent a car</h2>
				</div>
			  </div>
			</div>
		  </header>
		
<!-- list of cars -->
	<section id="list" class="py-3 mt-2">
		<div class="container">
			
			<div class="row">
			<%cars.forEach(car=> {%>
        
				<div class="col-md-4">
					<div class="card-columns mt-4">
							<div class="card">
								<a href="/cars/<%=car._id; %>">
                  
                  <% if(car.tag===true){ %>

                    <img src="/uploads/<%=car.img; %>" alt="" class="img-fluid card-img-top">
    
                    <% } else { %>
    
                    <img src="<%=car.img; %>" alt=""
                      class="img-fluid card-img-top">
    
                      <% } %>
                   

									<div class="card-body">
										<h5 class="text-muted">
											<%=car.title;%>
										</h5>
										<hr>
										<div class="d-flex justify-content-between">
											<p class="card-text text-secondary"><strong>Rating:</strong> <%=car.rating;%> <i class="bi bi-star-fill"></i>
											</p>
											<p class="card-text text-secondary"><strong>Total Trip:</strong> <%=car.totalTrip;%>
											</p>
										</div>
									</div>
								</a>
							</div>	
					</div>
				</div>
       
        <% }) %>
			</div>
		</div>
	</section>

		<footer>
			
		</footer>

	</body>
</html>  

